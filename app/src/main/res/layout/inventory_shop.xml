<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/x5"
        app:cardElevation="@dimen/x2">

        <RelativeLayout
            android:id="@+id/GoodOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x4"
            android:layout_marginTop="@dimen/x4"
            android:padding="@dimen/x5">

            <ImageView
                android:id="@+id/iv_advertoral_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x4"
                android:layout_marginRight="@dimen/x9"
                android:paddingTop="@dimen/x5"
                android:src="@mipmap/advertol_icon" />

            <TextView
                android:id="@+id/tv_advertoral_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5"
                android:layout_toRightOf="@id/iv_advertoral_icon"
                android:text="999感冒冲剂"
                android:textColor="@color/textHome"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_advertoral_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_advertoral_icon"
                android:layout_toRightOf="@id/iv_advertoral_icon"
                android:text="有效期：12"
                android:textColor="@color/textHomeGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_advertoral_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_advertoral_num"
                android:layout_marginTop="@dimen/x8"
                android:layout_toRightOf="@id/iv_advertoral_icon"
                android:text="库存量：100"
                android:textColor="@color/textHomeGray"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_advertoral_icon"
                android:layout_marginTop="@dimen/x8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="生产日期：2017-09-24"
                    android:textColor="@color/textHomeGray"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="生产日期：2017-09-24"
                    android:textColor="@color/textHomeGray"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>