<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
        android:layout_alignParentBottom="true"
        android:background="@color/homeLineColor" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x8"
        android:paddingBottom="@dimen/x8"
        android:paddingTop="@dimen/x8"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_section_content_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:text="fafdafafdagdaga"
            android:textColor="#222222"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_section_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x3"
            android:text="请点击选择"
            android:textColor="#888888"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/item_section_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@null"
            android:layout_marginTop="@dimen/x3"
            android:hint="请点击选择"
            android:textColor="#888888"
            android:textSize="14sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/item_section_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x12"
        android:src="@mipmap/home_more_right" />

    <TextView
        android:id="@+id/item_section_content_des_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:layout_toLeftOf="@id/item_section_iv"
        android:text="XXXX" />

</RelativeLayout>