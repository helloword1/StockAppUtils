<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#442e2e2e"
    android:gravity="bottom"
    android:orientation="vertical">
<example.com.stockapp.view.graphs.AlighRecycleView
    android:layout_width="match_parent"
    android:id="@+id/alRView"
    android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_strok_down"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal"
        android:padding="@dimen/x12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="选择到期时间"
            android:textColor="@color/textHome"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/popu_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close_popu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_strok_down"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="@dimen/x12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2017-09-20 至 2017-09-21"
            android:textColor="@color/textHome"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_strock_corner"
            android:paddingBottom="@dimen/x3"
            android:paddingLeft="@dimen/x12"
            android:paddingRight="@dimen/x12"
            android:paddingTop="@dimen/x3"
            android:text="选择"
            android:textColor="@color/textHomered"
            android:textSize="14sp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_strok_down"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/x12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2017-09-20 至 2017-09-21"
            android:textColor="@color/textHome"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_strock_corner"
            android:paddingBottom="@dimen/x3"
            android:paddingLeft="@dimen/x12"
            android:paddingRight="@dimen/x12"
            android:paddingTop="@dimen/x3"
            android:text="选择"
            android:textColor="@color/textHomered"
            android:textSize="14sp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/tv_strok_down"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/x12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2017-09-20 至 2017-09-21"
            android:textColor="@color/textHome"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_strock_corner"
            android:paddingBottom="@dimen/x3"
            android:paddingLeft="@dimen/x12"
            android:paddingRight="@dimen/x12"
            android:paddingTop="@dimen/x3"
            android:text="选择"
            android:textColor="@color/textHomered"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/x12"
        android:text="其他时间"
        android:visibility="gone"
        android:id="@+id/otherTime"
        android:textColor="@color/textHomered"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llBottom1"
        android:visibility="gone"
        android:background="@drawable/tv_strok_down"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/x12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="自定义时间"
            android:textColor="@color/textHome"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_strok_down"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/llBottom2"
        android:padding="@dimen/x12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生产日期"
            android:textColor="@color/textHome"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:text="请点击选择"
            android:textColor="#888888"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_strok_down"
        android:gravity="center_vertical"
        android:id="@+id/llBottom3"
        android:visibility="gone"
        android:orientation="vertical"
        android:padding="@dimen/x12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期限"
            android:textColor="@color/textHome"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:text="请点击选择"
            android:textColor="#888888"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BntBottom"
        android:visibility="gone"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_out_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x18"
            android:layout_marginLeft="@dimen/x22"
            android:layout_marginRight="@dimen/x22"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_corner"
            android:padding="@dimen/x5"
            android:text="确认出库"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>